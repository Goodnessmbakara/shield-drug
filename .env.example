# Professional Drug Analysis Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# STEP 3: Model URLs and API Configuration
# =============================================================================

# Custom Trained Model URLs (Step 1)
DRUG_CLASSIFIER_MODEL_URL=https://storage.googleapis.com/pharmaceutical-models/efficientnet-b3-drug-classifier/model.json
AUTHENTICITY_MODEL_URL=https://storage.googleapis.com/pharmaceutical-models/resnet50-authenticity/model.json
PILL_DETECTOR_MODEL_URL=https://storage.googleapis.com/pharmaceutical-models/yolov5-pill-detector/model.json
TEXT_DETECTOR_MODEL_URL=https://storage.googleapis.com/pharmaceutical-models/text-detection/model.json

# Hugging Face API Configuration (Step 2)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# Optional: Use specific model endpoints
HUGGINGFACE_VISION_MODEL=google/vit-base-patch16-224
HUGGINGFACE_BIOBERT_MODEL=dmis-lab/biobert-base-cased-v1.1
HUGGINGFACE_PHARMACEUTICAL_MODEL=pharmaceutical-ai/drug-classification-vit

# Cloud Provider API Keys (Step 2)
# Google Cloud Vision
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here
GOOGLE_CLOUD_PROJECT_ID=your_project_id

# Microsoft Azure Computer Vision
AZURE_VISION_API_KEY=your_azure_vision_api_key_here
AZURE_VISION_ENDPOINT=https://eastus.api.cognitive.microsoft.com/vision/v3.2

# AWS Rekognition
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# OpenAI GPT-4 Vision
OPENAI_API_KEY=your_openai_api_key_here

# Specialized Pharmaceutical API (if available)
PHARMA_API_ENDPOINT=https://api.pharmaceutical-specialist.com/v1/analyze
PHARMA_API_KEY=your_pharmaceutical_api_key_here

# =============================================================================
# Analysis Configuration
# =============================================================================

# Timeout settings (milliseconds)
AI_MODEL_TIMEOUT=60000
PROFESSIONAL_ANALYSIS_TIMEOUT=300000
CLOUD_API_TIMEOUT=30000
HUGGINGFACE_API_TIMEOUT=45000

# Confidence thresholds
MIN_DRUG_CONFIDENCE=0.3
MIN_AUTHENTICITY_CONFIDENCE=0.5
MIN_SAFETY_CONFIDENCE=0.4

# Fallback behavior
USE_CLOUD_FALLBACK=true
USE_HUGGINGFACE_FALLBACK=true
USE_LOCAL_FALLBACK=true
ENABLE_OFFLINE_MODE=false

# API Response format
AI_API_LEGACY_FORMAT=false

# =============================================================================
# Model Storage and Caching
# =============================================================================

# Local model cache directory
MODEL_CACHE_DIR=./models/cache
MODEL_CACHE_MAX_SIZE=2GB
MODEL_CACHE_TTL=86400

# Model download settings
MODEL_DOWNLOAD_TIMEOUT=120000
MODEL_DOWNLOAD_RETRY_COUNT=3
MODEL_DOWNLOAD_CHUNK_SIZE=1048576

# =============================================================================
# Security and Privacy
# =============================================================================

# Image processing
MAX_IMAGE_SIZE=10485760  # 10MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/bmp,image/webp
ENABLE_IMAGE_VALIDATION=true

# Data retention
ANALYSIS_LOGS_RETENTION_DAYS=30
TEMP_FILES_CLEANUP_HOURS=24

# API Rate limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_MS=3600000  # 1 hour

# =============================================================================
# Development and Testing
# =============================================================================

# Debug settings
DEBUG_DRUG_ANALYSIS=false
DEBUG_MODEL_LOADING=false
DEBUG_API_REQUESTS=false
VERBOSE_LOGGING=false

# Test mode settings
ENABLE_TEST_MODE=false
TEST_MODEL_URLS=true
MOCK_API_RESPONSES=false

# Performance monitoring
ENABLE_PERFORMANCE_METRICS=true
METRICS_ENDPOINT=https://metrics.your-domain.com/api/metrics

# =============================================================================
# Database Configuration (Step 4)
# =============================================================================

# Pharmaceutical database connection
PHARMA_DB_URL=your_pharmaceutical_database_url
PHARMA_DB_USERNAME=your_db_username
PHARMA_DB_PASSWORD=your_db_password

# Training data sources
FDA_ORANGE_BOOK_API=https://api.fda.gov/drug/label.json
NIH_PILLBOX_API=https://pillbox.nlm.nih.gov/API
PHARMACEUTICAL_DATASET_ENDPOINT=your_dataset_api_endpoint

# =============================================================================
# Training Configuration (Step 1)
# =============================================================================

# Training data paths
TRAINING_DATA_PATH=./data/pharmaceutical_images
PROCESSED_DATA_PATH=./data/processed
MODEL_OUTPUT_PATH=./models

# Training parameters
TRAINING_BATCH_SIZE=32
TRAINING_EPOCHS=100
TRAINING_LEARNING_RATE=0.001
TRAINING_VALIDATION_SPLIT=0.2

# GPU configuration
USE_GPU_TRAINING=true
GPU_MEMORY_LIMIT=8192  # MB
MIXED_PRECISION_TRAINING=true

# =============================================================================
# Monitoring and Alerting
# =============================================================================

# Health check endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300000  # 5 minutes

# Alert thresholds
ALERT_ON_MODEL_FAILURE=true
ALERT_ON_LOW_CONFIDENCE=true
ALERT_EMAIL=your-alerts@your-domain.com

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=90